{
    "_id": "pwc",
    "title": "PWC STEM, NodeBots workshop",
    "description": "This is the workshop for making Sumo Battle Simple Bots",
    "board": "uno",
    "board_opts": "",
    "components": [
        {
            "name": "leftMotor",
            "class": "Motor",
            "config": {
                "pins": {
                    "pwm": 6,
                    "dir": 7
                },
                "invertPWM": false
            }
        },
        {
            "name": "rightMotor",
            "class": "Motor",
            "config": {
                "pins": {
                    "pwm": 5,
                    "dir": 4
                },
                "invertPWM": false
            }
        },
        {
            "name": "lineSensorLeft",
            "class": "Sensor",
            "config": {
                "pin": "A2",
                "freq": 500
            }
        },
        {
            "name": "lineSensorRight",
            "class": "Sensor",
            "config": {
                "pin": "A3",
                "freq": 100
            }
        },
        {
            "name": "led13",
            "class": "Led",
            "config": {
                "pin": "13"
            }
        },
        {
            "name": "led10",
            "class": "Led",
            "config": {
                "pin": "10"
            }
        },
        {
            "name": "servo1",
            "class": "Servo",
            "config": {
                "pin": "7"
            }
        },
        {
            "name": "servo2",
            "class": "Servo",
            "config": {
                "pin": "8"
            }
        }
    ],
    "workshop_blocks": [
        {
            "name": "while_button",
            "category": "controller"
        },
        {
            "name": "console_log_value",
            "category": "value"
        },
        {
            "name": "math_number",
            "category": "value"
        },
        {
            "name": "text",
            "category": "value"
        }
    ],
    "exercises": [
        {
            "name": "Blink an LED",
            "description": "Make the LED connected to pin 10 turn on and off when you press the button",
            "components": [
                "led10"
            ]
        },
        {
            "name": "Move a servo",
            "description": "Make the servo attached to pin XXX change position as you press and release the green button",
            "components": [
                "led10", "servo1", "servo2"
            ]
        },
        {
            "name": "Spin a motor",
            "description": "Now make the left motor turn different directions based on which button you press.",
            "components": [
                "leftMotor"
            ]
        },
        {
            "description": "Now control both motors depending on the direction of the joystick",
            "components": [
                "leftMotor", "rightMotor"
            ]
        },
        {
            "description": "Advanced: Take a reading from the left and right line sensors. Use this information to control the motors in order to follow a line. Hint: if both sensors are ON the line go straight, if the left sensor is OFF the line then turn back to the right and if the right sensor is OFF the line turn back towards the left.",
            "components": [
                "leftMotor", "rightMotor", "lineSensorLeft", "lineSensorRight"
            ],
            "exercise_blocks": [
                {
                    "name": "controls_if",
                    "category": "logic"
                },
                {
                    "name": "logic_compare",
                    "category": "logic"
                }
            ]
        }
    ]
}
