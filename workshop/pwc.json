{
    "_id": "pwc",
    "title": "PWC STEM, NodeBots workshop",
    "description": "This is the workshop for making Sumo Battle Simple Bots",
    "board": "uno",
    "board_opts": "",
    "components": [
        {
            "name": "leftMotor",
            "class": "Motor",
            "config": {
                "pins": {
                    "pwm": 6,
                    "dir": 7
                },
                "invertPWM": false
            }
        },
        {
            "name": "rightMotor",
            "class": "Motor",
            "config": {
                "pins": {
                    "pwm": 9,
                    "dir": 8
                },
                "invertPWM": false
            }
        },
        {
            "name": "lineSensorLeft",
            "class": "Sensor",
            "config": {
                "pin": "A2",
                "freq": 250
            }
        },
        {
            "name": "lineSensorRight",
            "class": "Sensor",
            "config": {
                "pin": "A3",
                "freq": 250
            }
        },
        {
            "name": "led13",
            "class": "Led",
            "config": {
                "pin": "13"
            }
        },
        {
            "name": "led11",
            "class": "Led",
            "config": {
                "pin": "11"
            }
        },
        {
            "name": "servo1",
            "class": "Servo",
            "config": {
                "pin": "3",
                "type": "standard"
            }
        },
        {
            "name": "servo2",
            "class": "Servo",
            "config": {
                "pin": "4",
                "type": "standard"
            }
        }
    ],
    "workshop_blocks": [
        {
            "name": "while_button",
            "category": "controller"
        },
        {
            "name": "console_log_value",
            "category": "value"
        },
        {
            "name": "math_number",
            "category": "value"
        },
        {
            "name": "text",
            "category": "value"
        }
    ],
    "exercises": [
        {
            "name": "Blink an LED",
            "description": "Make the LED connected to pin 11 turn on and off when you press the button",
            "components": [
                "led11"
            ]
        },
        {
            "name": "Move a servo",
            "description": "Make the servo attached to pin 3 change position as you press and release the green button",
            "components": [
                "led11", "servo1", "servo2"
            ]
        },
        {
            "name": "Spin a motor",
            "description": "Now make the left motor turn different directions based on which button you press.",
            "components": [
                "leftMotor", "rightMotor"
            ]
        },
        {
            "name": "Control a wheeled robot",
            "description": "Now control both motors depending on the direction of the joystick",
            "components": [
                "leftMotor", "rightMotor", "led11", "servo1", "servo2"
            ]
        },
        {
            "name": "Switching to bluetooth",
            "description": "Now we need to untether your robot",
            "board_opts": {
                "port": "/dev/rfcomm0"
            },
            "components": [
                "leftMotor", "rightMotor", "led11", "servo1", "servo2"
            ]
        }
    ]
}
